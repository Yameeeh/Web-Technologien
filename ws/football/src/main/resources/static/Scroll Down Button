<button id="scrollButton">Mehr erfahren</button>



document.getElementById('scrollButton').addEventListener('click', function() {
    window.scrollTo({
        top: 0, // Hier die Postion angeben, wo hingescrollt werden soll
        behavior: 'smooth' // Scroll-art
    });
}); 


#scrollButton {
    position: fixed;
    bottom: 20px;
    right: 20px;
    padding: 10px 20px;
    background-color: #007bff;
    color: #ffffff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}
